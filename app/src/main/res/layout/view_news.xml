<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/news_tag"
        android:layout_width="28dp"
        android:layout_height="138dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/news_tag"
        android:contentDescription="@string/news_tag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/news_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:text="@string/test_date"
        android:textStyle="italic"
        android:textColor="@color/gray"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/news_tag"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/news_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        android:text="@string/title"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/black"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintStart_toEndOf="@+id/news_tag"
        app:layout_constraintTop_toBottomOf="@id/news_date_time"/>

</androidx.constraintlayout.widget.ConstraintLayout>