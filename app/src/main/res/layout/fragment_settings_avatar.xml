    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingsAvatarFragment">

    <TextView
        android:id="@+id/choose_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:paddingBottom="10dp"
        android:text="@string/choose_avatar_instruction"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/avatar_1_background"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/transparent"
        android:src="@drawable/circle_drawable_2"
        android:visibility="visible"
        android:contentDescription="@string/avatar_background_1"
        android:padding="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_avatar"
        tools:ignore="ImageContrastCheck" />

    <ImageButton
        android:id="@+id/avatar_1_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/transparent"
        android:src="@drawable/avatar_1"
        android:contentDescription="@string/avatar_1"
        android:padding="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_avatar"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/avatar_2_background"
        android:layout_width="120dp"
        android:layout_height="120dp"
