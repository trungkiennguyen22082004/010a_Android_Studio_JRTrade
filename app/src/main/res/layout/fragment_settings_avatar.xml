        android:contentDescription="@string/avatar_background_1"
        android:padding="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_avatar"
        tools:ignore="ImageContrastCheck" />

    <ImageButton
        android:id="@+id/avatar_2_btn"
