<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color_2"
    tools:context=".ForgotPasswordActivity" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/choose_reset_option_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" >

        <TextView
            android:id="@+id/reset_instruction_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="@string/choose_reset_pwd_way"
            android:textStyle="bold"
            android:textSize="33sp"
            android:textColor="@color/dark_violet_blue"
            app:layout_constraintWidth_percent="0.84"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/reset_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:gravity="start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reset_instruction_1" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:minHeight="48dp"
                android:checked="true"
                android:text="@string/reset_pwd_email_option"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="22sp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:minHeight="48dp"
                android:text="@string/reset_pwd_phone_number_option"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="italic" />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/enter_detail_section"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            app:layout_constraintWidth_percent="0.85"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reset_options" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/enter_request"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/violet"/>

            <EditText
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:hint="@string/password_enter_hint"
                android:inputType="text"
                android:autofillHints="@string/app_name"
                style="@style/edit_text_theme_2"
                tools:ignore="VisualLintTextFieldSize" />

        </LinearLayout>

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/custom_rectangle_button_2"
            android:text="@string/confirm"
            android:textStyle="bold"
            android:textColor="@color/violet"
            android:textSize="24sp"
            app:layout_constraintWidth_percent="0.70"
            app:layout_constraintHeight_percent="0.075"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/enter_detail_section"
            tools:ignore="VisualLintButtonSize" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reset_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>